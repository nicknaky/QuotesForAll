<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relative_widget"

    android:padding="@dimen/widget_margin">


    <TextView
        android:id="@+id/widget_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Test Test test test test Test test test testTest test test test test test"
        android:textColor="#AF0404"
        android:textSize="12sp" />

    <Button
        android:id="@+id/widget_button"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@id/widget_text"
        android:layout_alignTop="@id/widget_text"

        android:background="@drawable/widget_options"

        android:textColor="#AF0404" />

</RelativeLayout>